import numpy as np

def approximate_camera_matrix(img_width, img_height):
    focal_length = img_width  # rough guess: fx = fy = width in pixels
    cx = img_width / 2
    cy = img_height / 2

    camera_matrix = np.array([
        [focal_length, 0, cx],
        [0, focal_length, cy],
        [0, 0, 1]
    ], dtype=np.float32)

    return camera_matrix

print(approximate_camera_matrix(240, 240))